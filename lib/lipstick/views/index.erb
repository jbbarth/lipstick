
      <script type="text/x-handlebars" data-template-name="application">
        {{ outlet }}
      </script>

      <script type="text/x-handlebars" data-template-name="index">
        <div class="container">
          <h1>Welcome to Lipstick</h1>
        </div>
        {{ outlet }}
      </script>

      <script type="text/x-handlebars" data-template-name="sites/index">
        <div class="container">
          <h1>Nagios Sites<span class="site add" data-toggle="modal" data-target="#myModal">&#x2b;</span></h1>
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel">Create a New Site</h4>
                </div>
                <div class="modal-body">
                  <form role="form">
                    <div class="form-group">
                      <label for="inputName">Name</label>
                      <input type="text" class="form-control" id="inputName" placeholder="ex: LAX">
                    </div>
                    <div class="form-group">
                      <label for="inputUrl">URL</label>
                      <input type="text" class="form-control" id="inputUrl" placeholder="ex: http://nagios.lax.example.com/nagios">
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->
          {{#each site in controller}}
          {{#link-to "sites.show" site.id class="site"}}
            <div class="col-md-2 col-sm-3 col-xs-4 site">
              <span class="name">{{ site.name }}</span>
              <span {{bind-attr class=":events :count site.status"}}>{{ site.events.length }}</span>
            </div>
          {{/link-to}}
          {{/each}}
        </div>
        {{ outlet }}
      </script>

      <script type="text/x-handlebars" data-template-name="sites/show">
        <div class="container">
          <h1>Nagios Site &#47;&#47; <span class="site name">{{ name }}</span></h1>

          {{#if events.length}}
          <div class="table-responsive">
            <table class="table table-condensed events">
              <thead>
                <tr>
                  <th {{action 'sort' 'host'}}>Host</th>
                  <th {{action 'sort' 'service'}}>Service</th>
                  <th {{action 'sort' 'acknowledged'}}>Acknowledged</th>
                  <th {{action 'sort' 'status'}}>Status</th>
                  <th {{action 'sort' 'attempts'}}>Attempts</th>
                  <th {{action 'sort' 'duration'}}>Duration</th>
                </tr>
              </thead>
              <tbody>
                {{#each event in sortedEvents}}
                <tr>
                  <td><a href="{{unbound event.host_extinfo_url}}" target="_new">{{ event.host }}</a></td>
                  <td><a href="{{unbound event.service_extinfo_url}}" target="_new">{{ event.service }}</a></td>
                  <td>{{ event.acknowledged }}</td>
                  <td>{{ event.status }}</td>
                  <td>{{ event.attempts }}</td>
                  <td>{{ event.duration }}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{else}}
          <h2>All Green!</h2>
          {{/if}}
        </div>
      </script>
