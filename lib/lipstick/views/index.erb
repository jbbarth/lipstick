
      <script type="text/x-handlebars" data-template-name="application">
        {{ outlet }}
      </script>

      <script type="text/x-handlebars" data-template-name="index">
        <div class="container">
          <h1>Welcome to Lipstick</h1>
        </div>
        {{ outlet }}
      </script>

      <script type="text/x-handlebars" data-template-name="sites">
        <div class="container">
          <h1>Nagios Sites</h1>
          {{#each site in controller}}
          {{#link-to "sites.show" site.id class="site"}}
            <div class="col-md-2 col-sm-3 col-xs-4 site">
              <span class="name">{{ site.name }}</span>
              <span {{bind-attr class=":events :count site.status"}}>{{ site.events.length }}</span>
            </div>
          {{/link-to}}
          {{/each}}
        </div>
        {{ outlet }}
      </script>

      <script type="text/x-handlebars" data-template-name="sites/show">
        <h1>Hello from sites-show template {{ id }}</h1>
        {{ name }}
        {{ url }}
      </script>
